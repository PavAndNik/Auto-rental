@using AutoRental.Resources
@using AutoRental.Resources.Entities
@model IEnumerable<AutoRental.Clients.Web.Models.Characteristic.CharacteristicModel>

@{
    ViewBag.Title = Characteristic.TitleList;
}

<h2>@Characteristic.TitleList</h2>

<p>
   @Html.ActionLink(Buttons.Create, "New")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.ActionLink(Buttons.Edit, "Index", new { id = item.Id, controller = "Characteristic" })
            @using (Html.BeginRouteForm(new { action = "Index", controller = "Characteristic", id = @item.Id }))
            {
                @Html.HttpMethodOverride("DELETE")
                <input type="submit" value="@Buttons.Delete" />
            }
        </td>
    </tr>
}

</table>
